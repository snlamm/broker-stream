<div class="container">
  <div class="form-horizontal">
    <h1 class="text-center">Create Deal Sheet</h1>
    <br>
    <%= render 'shared/flash' %>
    <br>
    <%= form_for @deal_sheet, url: deal_sheets_path do |f| %>

    <div class="form-group ui-widget" id="half-page">
      <%= f.label :details, "Address", class: "col-lg-2 control-label"%>
      <div class="col-lg-10">
        <%= f.text_field :details, class:"col-lg-8", placeholder: "Enter address here", value: "", id: 'tags' %>
      </div>
      <div class="col-lg-10 col-lg-offset-2">
        <br>
        <%= f.submit "Generate Deal Sheet", class: "btn" %>
      </div>
    </div>

    <% end %>


  </div>
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
